// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
clear-fix()
  &:before,&:after
    content: ''
    display: table
  &:after
    clear both

link-a()
  color $color-text
  cursor pointer
  transition all .6s
  &:hover
    color $color-theme
btn(height,radius,bgColor,fontSize,fontColor)
  height height
  line-height height
  border-radius radius
  background-color bgColor
  font-size fontSize
  color fontColor
  text-align: center
  cursor: pointer
bg($theurl)
  background url($theurl) 0 0 no-repeat
